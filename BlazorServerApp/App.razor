<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeView>

                <NotAuthorized>
                    <div style="place-content: center; display: flex; align-items: center; justify-content: center; flex-direction: column; width:300px " class="card m-3 ">
                        <h2>Sign-in</h2>
                        <div>
                            <LoginControl />
                        </div>
                        <btn class="btn btn-primary" @onclick="(()=>passwordReset = true)">Forgotten Password?</btn>
                        @code{
                            bool passwordReset = false;
                        }
                        @if (passwordReset) {
                        <BlazorServerApp.Pages.admin.PasswordReset></BlazorServerApp.Pages.admin.PasswordReset>
                        }
                    </div>
                </NotAuthorized>
                <Authorized>
                    <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                </Authorized>
            </AuthorizeView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
                <a href="/">Go Home</a>

            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
