        //Convert Word to PDF
        //document.SaveToFile("toPDF.PDF", FileFormat.PDF);
        //await PrintingService.Print("toPDF.PDF");

        ComponentInfo.SetLicense("FREE-LIMITED-KEY");

        // Create a new empty Word file.
        var document = DocumentModel.Load(fileManager.GetFilePath(managerModel.FileID));
        // Add a new document content.

        // Save to DOCX and PDF files.
        document.Save("Document.docx");
    }

    private void AltPrint()
    {

        Document document = new Document();

        FileManagerModel managerModel = dataLoader.GetFile(RecipeID).Result;
        //Load Document
        document.LoadFromFile(fileManager.GetFilePath(managerModel.FileID));

        //Convert Word to PDF
